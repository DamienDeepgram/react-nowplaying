{
  "include": ["src"],
  "exclude": ["node_modules/**/*.ts", "demo/"],
  "compilerOptions": {
    "jsx": "react",
    "declaration": true,
    "declarationMap": true,
    "module": "CommonJS",
    "outDir": "dist",
    "rootDir": "src",
    "sourceMap": true,
    "moduleResolution": "Node",
    "stripInternal": true,
    "allowSyntheticDefaultImports": true,
    "target": "es2016",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  }
}
